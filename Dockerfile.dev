# Etapa 1: Build (compilar la aplicación)
FROM mcr.microsoft.com/dotnet/sdk:6.0-jammy AS build
WORKDIR /src

# Copiar archivos del proyecto
COPY ["Ordenes.Api.csproj", "."]

# Restaurar dependencias
RUN dotnet restore "Ordenes.Api.csproj"

# Copiar código fuente
COPY . .

# Compilar la aplicación (modo Debug para desarrollo)
RUN dotnet build "Ordenes.Api.csproj" -c Debug -o /app/build

# Publicar (genera el artefacto listo para ejecutar)
RUN dotnet publish "Ordenes.Api.csproj" -c Debug -o /app/publish

# Etapa 2: Runtime (ejecutar la aplicación)
FROM mcr.microsoft.com/dotnet/aspnet:6.0-jammy AS runtime
WORKDIR /app

# Instalar ca-certificates, libssl3 y curl para soporte SSL/TLS y health checks HTTP
RUN apt-get update && apt-get install -y ca-certificates libssl3 curl && rm -rf /var/lib/apt/lists/*

# Copiar la aplicación compilada desde la etapa build
COPY --from=build /app/publish .

# Copiar archivos de configuración (solo los que están en el repositorio)
COPY appsettings.json .
COPY appsettings.Development.json .

# Exponer el puerto 5001 (HTTP)
EXPOSE 5001

# Variables de entorno por defecto
ENV ASPNETCORE_URLS=http://+:5001
ENV ASPNETCORE_ENVIRONMENT=Development

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5001/health || exit 1

# Comando de inicio
ENTRYPOINT ["dotnet", "Ordenes.Api.dll"]
